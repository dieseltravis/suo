(header)

<main>

	{{#orderedPosts}}
		{{#if (equals @index 0)}}
		<article>
			<hgroup>
				<h3><time datetime="{{{moment pubDate 'toISOString'}}}" pubdate="pubdate">{{{moment pubDate 'YYYY-MM-DD'}}}</time></h3>
				<h1><a href="{{parent.app}}{{relativePath}}">{{{title}}}</a></h1>
				<h2>{{{subtitle}}}</h2>
			</hgroup>

			{{{body}}}

			<p><a href="{{parent.app}}{{relativePath}}#disqus_thread">comments</a></p>
		</article>
		{{/if}}
		{{#if (equals @index 1)}}
			<h2>Previously on {{parent.title}}</h2>
			<article>
				<hgroup>
					<h3><time datetime="{{{moment pubDate 'toISOString'}}}" pubdate="pubdate">{{{moment pubDate 'YYYY-MM-DD'}}}</time></h3>
					<h1><a href="{{parent.app}}{{relativePath}}">{{{title}}}</a></h1>
					<h2>{{{subtitle}}}</h2>
				</hgroup>
				<p>{{{intro}}}</p>
				<p><a href="{{parent.app}}{{relativePath}}">...continue</a></p>
			</article>
		{{/if}}
		{{#if (equals @index 2)}}
			<article>
				<hgroup>
					<h3><time datetime="{{{moment pubDate 'toISOString'}}}" pubdate="pubdate">{{{moment pubDate 'YYYY-MM-DD'}}}</time></h3>
					<h1><a href="{{parent.app}}{{relativePath}}">{{{title}}}</a></h1>
					<h2>{{{subtitle}}}</h2>
				</hgroup>
				<p>{{{intro}}}</p>
				<p><a href="{{parent.app}}{{relativePath}}">...continue</a></p>
			</article>
		{{/if}}
	{{/orderedPosts}}
		
</main>

(footer)